@model List<MVC_CRUD.Context.tbl_Student>
@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>

<table class="table table-responsive table-hover">
    <tr>
        <th>Student Name</th>
        <th>Father Name</th>
        <th>Email Address</th>
        <th>Mobile #</th>
        <th>Description</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model) { 
    <tr>
        <td>@item.Name</td>
        <td>@item.Fname</td>
        <td>@item.Email</td>
        <td>@item.Mobile</td>
        <td>@item.Description</td>

        <td>
            <a href="#" class="btn btn-success">Edit</a>
            <a href="@Url.Action("StudentDelete", new {item.ID})" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    
</table>

